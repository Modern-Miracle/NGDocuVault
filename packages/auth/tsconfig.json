{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@docu/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@docu/auth/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    },
    "declaration": false,
    "declarationMap": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
