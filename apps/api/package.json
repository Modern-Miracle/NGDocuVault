{
  "name": "docu-api",
  "version": "0.1.0",
  "description": "Docu backend API",
  "main": "dist/src/server.js",
  "types": "dist/src/server.d.js",
  "scripts": {
    "dev:api": "ts-node-dev --respawn --transpile-only --project tsconfig.dev.json src/server.ts",
    "build": "",
    "start": "node dist/src/server.js",
    "test": "jest ",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "db:check-port": "node scripts/check-port.mjs",
    "db:start": "pnpm db:check-port && docker compose up -d sqlserver",
    "db:stop": "docker compose down",
    "db:setup": "node scripts/setup-database.mjs",
    "db:clear": "node scripts/clear-database.mjs",
    "db:prepare": "pnpm db:stop && pnpm db:start && pnpm db:wait && pnpm db:setup",
    "db:rebuild": "pnpm db:stop && pnpm db:start && pnpm db:wait && pnpm db:clear && pnpm db:setup",
    "db:wait": "echo 'Waiting for database to start...' && sleep 5"
  },
  "keywords": [
    "DID Authentication",
    "blockchain",
    "SIWE",
    "JWT"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@docu/eslint-config": "workspace:*",
    "@docu/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.3.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@azure/identity": "^4.8.0",
    "@azure/keyvault-keys": "^4.9.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@docu/abi": "workspace:*",
    "@helia/json": "^4.0.3",
    "@helia/strings": "^4.0.3",
    "@helia/unixfs": "^5.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@web3-storage/w3up-client": "^17.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "did-resolver": "^4.1.0",
    "dotenv": "^16.0.3",
    "elliptic": "^6.6.1",
    "ethers": "^6.13.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helia": "^5.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mssql": "^11.0.1",
    "pinata": "^2.2.0",
    "siwe": "^3.0.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  }
}
