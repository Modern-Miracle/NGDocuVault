{
  "name": "docu-contract",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "dev:contract": "npx hardhat node",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:checklist": "hardhat run scripts/pre-deployment-checklist.ts",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-sepolia.ts --network mainnet",
    "deploy:verify": "hardhat run scripts/verify-deployment.ts",
    "deploy:recovery": "hardhat run scripts/deploy-docuvault-only.ts --network",
    "verify": "hardhat verify --network",
    "gas-report": "REPORT_GAS=true hardhat test",
    "size": "hardhat size-contracts",
    "setup:roles": "./scripts/setup-roles.sh",
    "register:all": "hardhat run scripts/register-all-roles.ts --network localhost",
    "register:admin": "hardhat run scripts/register-admin.ts --network localhost",
    "register:issuer": "hardhat run scripts/register-issuer.ts --network localhost",
    "register:holder": "hardhat run scripts/register-holder.ts --network localhost",
    "register:verifier": "hardhat run scripts/register-verifier.ts --network localhost",
    "verify:roles": "hardhat run scripts/verify-roles.ts --network localhost",
    "lint": "solhint 'src/**/*.sol' && eslint 'src/**/*.{ts,tsx}' 'scripts/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "lint:fix": "solhint 'src/**/*.sol' --fix && eslint 'src/**/*.{ts,tsx}' 'scripts/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' --fix",
    "coverage": "hardhat coverage",
    "typechain": "hardhat compile && typechain --target ethers-v6 --out-dir types/contracts './artifacts/src/**/!(*dbg).json'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "circomlib": "^2.0.5",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@docu/eslint-config": "workspace:*",
    "@docu/typescript-config": "workspace:*",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.10",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/ignition-core": "^0.15.10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/circomlibjs": "^0.1.6",
    "@types/figlet": "^1.7.0",
    "@types/mocha": "^10.0.10",
    "@types/snarkjs": "^0.7.9",
    "boxen": "^8.0.1",
    "chai": "^4.2.0",
    "chalk": "^5.4.1",
    "circomlibjs": "^0.1.7",
    "cli-spinners": "^3.2.0",
    "ethers": "^6.13.5",
    "figlet": "^1.8.1",
    "gradient-string": "^3.0.0",
    "hardhat": "^2.23.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^1.0.2",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^11.1.0",
    "ora": "^8.2.0",
    "snarkjs": "^0.7.5",
    "solhint": "^5.0.5",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.2"
  }
}
